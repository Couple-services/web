        "typescript": "^4.9.5",
        "web-vitals": "^2.1.4",
        "prettier": "^3.0.3",
        "pretty-quick": "^2.0.1"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-formatter-summary": "^1.1.0",
        "eslint-import-resolver-typescript": "^3.6.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-sonarjs": "^0.18.0",
